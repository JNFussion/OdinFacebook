<article class="media">
  <figure class="media-left">
    <p class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <%= form_for [commentable, @comment] do |f|%>
    <div class="field">
      <p class="control">
        <%= f.text_area :body, placeholder: "Add comment", class:"textarea is-info is-small", rows: "3", autofocus: true%>
      </p>
    </div>
    <nav class="level">
      <div class="level-right">
        <%= f.submit "Comment", class: "button is-info level-item"%>
      </div>
      <% end %>
    </nav>
  </div>
</article>