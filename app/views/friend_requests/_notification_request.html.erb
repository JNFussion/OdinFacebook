<article class="media">
  <figure class="media-left">
    <p class="image is-32x32">
      <img src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <%= link_to request.requestor.full_name, user_path(request.requestor)%>
    </div>
  </div>
  <div class="media-right">
    <div class="buttons are-small">
        <%= link_to "Accept", friend_request_path(request), method: :put, class: "button is-success" %>
        <%= link_to "Decline", friend_request_path(request), method: :delete,  data: { confirm: "Are you sure?" }, class: "button is-danger" %>
    </div>
  </div>
</article>