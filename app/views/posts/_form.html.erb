<%= form_with model: @post do |f| %>
  
  <% if @post.errors.any?%>
    <div class="field">
       <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li class="has-text-white ml-2">
              <%= message %>
            </li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :content, "What are you thinking about?", class: "label"%>
    <div class="control">
      <%= f.text_area :content, class:"textarea is-info is-small", autofocus: true, placeholder: "Post about..."%>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-small">
      <%= f.label :url_photo, "Link:", class:"label"%>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.text_field :url_photo, class:"input is-small", placeholder: "Url"%>
        </div>
      </div>
    </div>
    
  </div>
  
  <div class="field is-grouped is-grouped-right">
    <div class="control">
      <div class="file">
        <label class="file-label">
         <%= f.file_field :photo, accept: 'image/png,image/gif,image/jpeg,image/jpg', class:"file-input"%>
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
        </label>
      </div>
    </div>
    <div class="control">
      <%= f.submit "Publish", class: "button is-info"%>
    </div>
  </div>
<% end %>