<section class="section py-2">
  <div class="container box p-0">
    <article class="media box mb-3 is-flex has-background-info">
      <figure class="media-left">
        <p class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content is-align-self-center">
        <div class="content has-text-white">
          <strong class="is-size-5 has-text-white"><%= post.author.full_name%></strong> <small><%= distance_of_time_in_words_to_now(post.created_at)%> ago.</small>
        </div>
      </div>
    </article>
    <div class="container mx-3">
      <%=post.content%>
    </div>
    
    <nav id="btn_bar" class="level m-3 p-2">
      <div class="level-left">
        <p class="level-item">
          <span class="icon">
            <i class="far fa-thumbs-up"></i>
          </span>
        </p>
        <p class="level-item">
          <span class="icon">
            <i class="far fa-thumbs-down"></i>
          </span>
        </p>
        <p class="level-item">
          <%= link_to "Respond"%>
        </p>
        <% if current_user == @post.author%>
          <p class="level-item">
            <%= link_to "Respond"%>
          </p>
          <p class="level-item">
            <%= link_to "Respond"%>
          </p>
        <% end %>
      </div>
    </nav>
  </div>
</section>
