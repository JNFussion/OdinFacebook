<div class="mb-3">
  <h2 class="title is-5 mb-0"><%=user.username%></h2>
  <div>ID: <%= user.id %></div>
  <div>Name: <%= user.first_name%></div>
  <div>Last name: <%= user.last_name%></div>
  <div>Email: <%= user.email %></div>
  <%= button_to "friend request", friend_requests_path(friend_request: {:receiver_id => user.id})%>
  <%= link_to "delete friend", friendship_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
</div>

