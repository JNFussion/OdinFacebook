<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div id="form-div" class="column is-two-fifths has-background-info">
      <h2 id="form-title" class="title has-text-white has-background-info-dark p-2">
        Upload avatar
      </h2>
      <div class="columns is-centered">
        <p class="image is-96x96">
          <%= image_tag user_avatar(@user), class:"is-rounded"%>
        </p>
      </div>
        <%= form_for(@user, :url => { :action => "update_avatar" } ) do |f| %>

          <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <div class="file">
                <label class="file-label">
                  <%= f.file_field :avatar, class:"file-input"%>
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Choose a fileâ€¦
                    </span>
                  </span>
                </label>
              </div>
            </div>
            <div class="control">
              <%= link_to "Remove avatar", user_destroy_avatar_path, data: { confirm: "Are you sure?" }, method: :delete, class:"button is-danger"%>
            </div>
            <div class="control">
              <%= f.submit "Upload avatar", class:"button is-info is-inverted"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>