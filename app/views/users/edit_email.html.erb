<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div id="form-div" class="column is-one-third has-background-info">
      <h2 id="form-title" class="title has-text-white has-background-info-dark p-2">
        Change email
      </h2>
        <%= form_for(@user, :url => { :action => "update_email" } ) do |f| %>
          <div>
           <%= render "devise/shared/error_messages", resource: @user %>
          </div>
          <div class="field">
            <%= f.label :email,class: "label has-text-white"  %>
            <div class="control">
              <%= f.email_field :email, autofocus: true, class:"input"  %>
            </div>
          </div>
          
          <div class="field">
            <%= f.label :current_password,class: "label has-text-white" %>
            <div class="control">
              <%= f.password_field :current_password, class:"input" %>
            </div>
            <p class="help has-text-white">
              <i>(we need your current password to confirm your changes)</i>
            </p>
          </div>
          <div class="field is-grouped is-grouped-right">
            <div class="control">
              <%= f.submit "Update password", class:"button is-info is-inverted"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>